---
title: Add Expense
layout: simple-layout.njk
---

<h1>
  Add Expense
</h1>

<div>
  <a href="/overview">
    Go Back
  </a>
</div>

<form data-add-expense-form class="stack">
  <div class="cluster">
    <div>
      <div>
        <label for="year">Year</label>
        <input id="year" type="text" name="year" inputmode="numeric" pattern="^[1-2][0-9][0-9][0-9]$" autofill="false" autocomplete="off" style="max-width: 8ch" required>
      </div>
      <div>
        <label for="month">Month</label>
        <input id="month" type="text" name="month" inputmode="numeric" pattern="^(0?[1-9]|1[012])$" autofill="false" autocomplete="off" style="max-width: 6ch" required>
      </div>
      <div>
        <label for="day">Day</label>
        <input id="day" type="text" name="day" inputmode="numeric" pattern="^(0?[1-9]|[12]\d|3[01])$" autofill="false" autocomplete="off" style="max-width: 6ch" required>
      </div>
    </div>
  </div>
  <div>
    <fieldset>
      <legend>
        Category
      </legend>
      <div data-category>
        <label class="custom-checkbox">
          <input type="radio" name="category" value="new-category" required>
          {% include "radio-svg.njk" %}
          <span>
            New Category
          </span>
        </label>
      </div>
    </fieldset>
  </div>
  <div data-new-category>
    <label for="new-category">
      New Category
    </label>
    <input id="new-category" type="text" name="new-category" autofill="false" autocomplete="off" required>
  </div>
  <div>
    <label for="expense-description">
      Description
    </label>
    <input id="expense-description" type="text" name="expense-description" required>
  </div>
  <div>
    <label for="amount">
      Amount
    </label>
    <input id="amount" type="text" name="amount" inputmode="numeric" pattern="^(\s{1,})?\$?\d{1,3}(,?\d{3})*(\.\d+)?(\s{1,})?$" style="width: 12ch" autofill="false" autocomplete="off" required>
  </div>
  <div>
    <button type="submit">
      Save Expense
    </button>
  </div>
</form>

<script>
  document.addEventListener('submit', (event) => {
    event.preventDefault();
  });
</script>
