---
title: Add Income
layout: simple-layout.njk
---

<h1>
  Add Income
</h1>

<div>
  <a href="/overview">
    Go Back
  </a>
</div>

<form data-add-income-form class="stack">
  {% include "date-inputs.njk" %}
  {% include "category-inputs.njk" %}
  <div>
    <label for="income-description">
      Description
    </label>
    <input id="income-description" type="text" name="income-description" required>
  </div>
  <div>
    <label for="amount">
      Amount
    </label>
    <input id="amount" type="text" name="amount" inputmode="numeric" pattern="^(\s{1,})?\$?\d{1,3}(,?\d{3})*(\.\d+)?(\s{1,})?$" style="width: 12ch" autofill="false" autocomplete="off" required>
  </div>
  <div>
    <button type="submit">
      Save Income
    </button>
  </div>
</form>

<script>
  document.addEventListener('submit', (event) => {
    event.preventDefault();
  });
</script>
